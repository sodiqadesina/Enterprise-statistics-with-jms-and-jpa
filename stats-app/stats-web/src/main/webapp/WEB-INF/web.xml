<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Stats Web Application</display-name>

    <!-- StatsSingletonServlet -->
    <servlet>
        <servlet-name>StatsSingletonServlet</servlet-name>
        <servlet-class>ec.stats.web.StatsSingletonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsSingletonServlet</servlet-name>
        <url-pattern>/add-data</url-pattern>
    </servlet-mapping>

    <!-- StatsStatelessServlet -->
    <servlet>
        <servlet-name>StatsStatelessServlet</servlet-name>
        <servlet-class>ec.stats.web.StatsStatelessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsStatelessServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>

    <!-- StatsStatefulServlet -->
    <servlet>
        <servlet-name>StatsStatefulServlet</servlet-name>
        <servlet-class>ec.stats.web.StatsStatefulServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsStatefulServlet</servlet-name>
        <url-pattern>/insert-data</url-pattern>
    </servlet-mapping>

 <!-- JmsServlets -->
 
 	<servlet>
        <servlet-name>StatsJMSProducerServlet</servlet-name>
        <servlet-class>ec.stats.jms.StatsJMSProducerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsJMSProducerServlet</servlet-name>
        <url-pattern>/producer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatsJMSPublisherServlet</servlet-name>
        <servlet-class>ec.stats.jms.StatsJMSPublisherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsJMSPublisherServlet</servlet-name>
        <url-pattern>/publisher</url-pattern>
    </servlet-mapping>
    
   
    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    
    <!--New Servlet mappings -->
    
    
      <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ec.stats.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>ec.stats.web.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListUsersServlet</servlet-name>
        <servlet-class>ec.stats.web.ListUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindUserServlet</servlet-name>
        <servlet-class>ec.stats.web.FindUserServlet</servlet-class>
    </servlet>

    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUsersServlet</servlet-name>
        <url-pattern>/listUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindUserServlet</servlet-name>
        <url-pattern>/findUser</url-pattern>
    </servlet-mapping>
	
	<!-- Model servlets -->
	<servlet>
        <servlet-name>StatsModelSaveServlet</servlet-name>
        <servlet-class>ec.stats.web.StatsModelSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsModelSaveServlet</servlet-name>
        <url-pattern>/modelsave</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatsModelGetServlet</servlet-name>
        <servlet-class>ec.stats.web.StatsModelGetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsModelGetServlet</servlet-name>
        <url-pattern>/modelget</url-pattern>
    </servlet-mapping>
    
</web-app>
